{
  "manifest_version": 3,
  "name": "ONBOARD.AI - Smart Onboarding Assistant",
  "version": "1.0.0",
  "description": "AI-powered overlay that guides employees through onboarding tasks on GitHub and other platforms",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://github.com/*",
    "http://localhost:8000/*",
    "https://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}